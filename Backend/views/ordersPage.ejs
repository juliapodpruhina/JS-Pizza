<% include common/header.ejs %>

<div class="main-cont container-fluid">
    <div class="row orders-page-panel">
        <div class="left-panel">
            <div class="contact-form">
                <div class="form-description">1. Контактні дані</div>
                <div class="row">
                    <div class="col-md-7">
                        <form class="form-horizontal">
                            <div class="form-group name">
                                <label class="col-sm-2 control-label">Ім'я</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="inputName" placeholder="Ім'я Прізвище"/>
                                </div>
                                <span class="name-invalid">Введіть тільки власне ім'я, без цифр</span>
                            </div>
                            <div class="form-group phone">
                                <label class="col-sm-2 control-label">Телефон</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="inputPhone" placeholder="+380123456789"/>
                                    <span class="phone-invalid">Введіть номер телефону у форматі +380, або почніть з 0</span>
                                </div>
                            </div>
                            <div class="form-group address">
                                  <label class="col-sm-2 control-label">Адреса</label>
                                    <div class="col-sm-10">
                                    <input class="form-control" type="text" id="inputAddress" placeholder="Київ, вул. Спаська, 2"/>
                                    <span class="address-invalid">Введіть адресу доставки піци</span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-5 order-info">
                        <div class="bs-callout bs-callout-warning">
                            <h4>Інформація про замовлення</h4>
                            <p class="order-summery-time">
                                <b>Приблизний час доставки:</b>
                            </p>
                            <p class="order-summery-adress">
                                <b>Адреса доставки:</b> 
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                <div class="form-group next-step-wrap">
                        <div class="next-step-width">
                            <button type="button" class="btn btn-warning btn-block next-step-button">Далі<i class="glyphicon glyphicon-chevron-right icon-white"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="right-panel">
            <div class="right-column">
        <div class="right-top">
            <span class="title-top-cart">Замовлення 
                <span class="badge orders-count-cart">0</span>
            </span>
            <span class="clear-cart">Очистити замовлення</span>
        </div>
        <div id="cart"></div>
        <div class="right-bottom">
        <span class="title-bottom-cart">Сума замовлення</span>
            <span class="sum">0</span>
            <div class="order"><button class="btn btn-default change-order">Редагувати замовлення</button></div>
        </div>
    </div>
        </div>
    </div>
</div>

<% include common/footer.ejs %>